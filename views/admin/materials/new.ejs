<!-- Header dengan Gradient -->
<div class="mb-4">
  <h2 class="fw-bold mb-2"
    style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;">
    ➕ Tambah Video Pembelajaran Baru
  </h2>
  <p class="text-muted">Tambahkan video pembelajaran untuk Unit: <%= unit[0].title %>
  </p>
</div>

<!-- Breadcrumb -->
<nav aria-label="breadcrumb mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="/admin/materials">Materi</a></li>
    <li class="breadcrumb-item active" aria-current="page">Tambah Video</li>
  </ol>
</nav>

<!-- Tombol Navigasi -->
<div class="mb-3 d-flex justify-content-between align-items-center">
  <div></div>
  <div class="d-flex gap-2">
    <a href="/admin/materials" class="btn btn-outline-secondary btn-sm">
      <i class="bi bi-arrow-left"></i> Kembali
    </a>
    <a href="/admin/dashboard" class="btn btn-outline-primary btn-sm">
      <i class="bi bi-house"></i> Dashboard
    </a>
  </div>
</div>

<!-- Info Box -->
<div class="alert alert-primary d-flex align-items-start mb-4" role="alert">
  <i class="bi bi-lightbulb-fill me-3 fs-4"></i>
  <div>
    <h5 class="alert-heading">Tips Menambahkan Video Pembelajaran</h5>
    <p class="mb-0">
      • Gunakan <strong>YouTube</strong> atau <strong>Vimeo</strong> untuk video yang lebih besar (lebih cepat & hemat
      storage)<br>
      • Upload langsung untuk video pendek (<100MB) yang ingin Anda simpan di server<br>
        • Tambahkan thumbnail agar tampilan lebih menarik<br>
        • Pastikan durasi video sesuai dengan target pembelajaran Anda
    </p>
  </div>
</div>

<!-- Form Tambah Video -->
<div class="card border-0 shadow-sm">
  <div class="card-body">
    <form method="POST" action="/admin/units/<%= unit[0].id %>/materials" enctype="multipart/form-data"
      id="addVideoForm">

      <div class="mb-4">
        <label for="title" class="form-label fw-bold">
          <i class="bi bi-card-heading"></i> Judul Video <span class="text-danger">*</span>
        </label>
        <input type="text" class="form-control form-control-lg" id="title" name="title"
          placeholder="Contoh: Etika Digital dan Akhlakul Karimah di Media Sosial" required>
        <small class="text-muted">Berikan judul yang jelas dan menarik untuk menarik perhatian mahasiswa</small>
      </div>

      <div class="mb-4">
        <label for="content" class="form-label fw-bold">
          <i class="bi bi-file-text"></i> Deskripsi Video (Opsional)
        </label>
        <textarea class="form-control" id="content" name="content" rows="4"
          placeholder="Tambahkan deskripsi, ringkasan, atau poin-poin penting dari video..."></textarea>
        <small class="text-muted">Deskripsi membantu mahasiswa memahami konten video sebelum menonton</small>
      </div>

      <input type="hidden" name="media_type" value="VIDEO">
      <input type="hidden" name="is_video_based" value="1">

      <!-- Pilihan Upload Method -->
      <div class="mb-4">
        <label class="form-label fw-bold">
          <i class="bi bi-cloud-upload"></i> Metode Upload Video <span class="text-danger">*</span>
        </label>
        <div class="upload-method-selector">
          <div class="row g-3">
            <div class="col-md-6">
              <input type="radio" class="btn-check" name="upload_method" id="method_url" value="url" checked>
              <label class="method-card" for="method_url">
                <div class="method-icon">
                  <i class="bi bi-link-45deg"></i>
                </div>
                <h6 class="mb-2">URL/Link Video</h6>
                <p class="small text-muted mb-0">YouTube, Vimeo, Google Drive, atau URL lainnya</p>
                <div class="method-check">
                  <i class="bi bi-check-circle-fill"></i>
                </div>
              </label>
            </div>
            <div class="col-md-6">
              <input type="radio" class="btn-check" name="upload_method" id="method_file" value="file">
              <label class="method-card" for="method_file">
                <div class="method-icon">
                  <i class="bi bi-file-earmark-arrow-up"></i>
                </div>
                <h6 class="mb-2">Upload File Video</h6>
                <p class="small text-muted mb-0">Upload file video dari komputer Anda</p>
                <div class="method-check">
                  <i class="bi bi-check-circle-fill"></i>
                </div>
              </label>
            </div>
          </div>
        </div>
      </div>

      <!-- URL Input -->
      <div class="mb-4" id="url_input">
        <label for="media_url" class="form-label fw-bold">
          <i class="bi bi-link-45deg"></i> URL Video <span class="text-danger">*</span>
        </label>
        <input type="text" class="form-control form-control-lg" id="media_url" name="media_url"
          placeholder="https://www.youtube.com/embed/VIDEO_ID">

        <div class="mt-3">
          <div class="accordion" id="urlHelp">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#collapseHelp">
                  <i class="bi bi-question-circle me-2"></i> Cara mendapatkan URL Embed YouTube/Vimeo
                </button>
              </h2>
              <div id="collapseHelp" class="accordion-collapse collapse" data-bs-parent="#urlHelp">
                <div class="accordion-body">
                  <h6><strong>YouTube:</strong></h6>
                  <ol class="small">
                    <li>Buka video di YouTube</li>
                    <li>Klik tombol "Share" di bawah video</li>
                    <li>Pilih "Embed"</li>
                    <li>Salin URL dari <code>src="..."</code></li>
                    <li>Contoh: <code>https://www.youtube.com/embed/dQw4w9WgXcQ</code></li>
                  </ol>
                  <h6 class="mt-3"><strong>Vimeo:</strong></h6>
                  <ol class="small">
                    <li>Buka video di Vimeo</li>
                    <li>Klik tombol "Share"</li>
                    <li>Salin link dari bagian embed code</li>
                    <li>Contoh: <code>https://player.vimeo.com/video/123456789</code></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- File Upload (Hidden by default) -->
      <div class="mb-4 d-none" id="file_input">
        <div class="alert alert-info">
          <i class="bi bi-info-circle-fill"></i>
          <strong>Informasi Upload Video:</strong><br>
          • Maksimal ukuran file: <strong>200MB</strong><br>
          • Format yang didukung: <strong>MP4, WEBM, MOV, AVI</strong><br>
          • Durasi: <strong>Tidak terbatas</strong> (2-10 menit atau lebih, semua bisa)<br>
          • Setiap unit bisa punya <strong>banyak video</strong> (7+ video tidak masalah)<br>
          • Rekomendasi: Video 720p atau 1080p, kompres jika perlu
        </div>

        <label for="video_file" class="form-label fw-bold">
          <i class="bi bi-film"></i> File Video <span class="text-danger">*</span>
        </label>
        <div class="upload-area" id="uploadArea">
          <input type="file" class="form-control d-none" id="video_file" name="video_file"
            accept="video/mp4,video/webm,video/quicktime,video/x-msvideo">
          <div class="upload-placeholder" onclick="document.getElementById('video_file').click()">
            <i class="bi bi-cloud-arrow-up display-4 text-primary mb-3"></i>
            <p class="mb-1"><strong>Klik untuk memilih video</strong></p>
            <p class="small text-muted">atau drag & drop file video di sini</p>
            <p class="small text-muted">MP4, WEBM, MOV, AVI (Max: 100MB)</p>
          </div>
          <div class="upload-info d-none" id="uploadInfo">
            <i class="bi bi-file-earmark-play text-success fs-1 mb-2"></i>
            <p class="mb-1"><strong id="fileName"></strong></p>
            <p class="small text-muted" id="fileSize"></p>
            <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="clearVideoFile()">
              <i class="bi bi-trash"></i> Hapus
            </button>
          </div>
        </div>

        <div class="mt-4">
          <label for="thumbnail_file" class="form-label fw-bold">
            <i class="bi bi-image"></i> Thumbnail/Poster Video (Opsional)
          </label>
          <input type="file" class="form-control" id="thumbnail_file" name="thumbnail_file"
            accept="image/jpeg,image/png,image/webp">
          <small class="text-muted">Gambar preview sebelum video diputar (JPG, PNG, WEBP, Max: 5MB)</small>
        </div>

        <div class="mt-4">
          <label for="video_duration" class="form-label fw-bold">
            <i class="bi bi-clock"></i> Durasi Video (dalam detik) <span class="text-danger">*</span>
          </label>
          <div class="input-group">
            <input type="number" class="form-control" id="video_duration" name="video_duration" placeholder="126"
              required min="1">
            <span class="input-group-text">detik</span>
          </div>
          <small class="text-muted">
            Contoh: 2 menit 6 detik = 126 detik<br>
            <span id="durationHelper" class="text-primary"></span>
          </small>
        </div>
      </div>

      <hr class="my-4">

      <div class="d-flex gap-2 justify-content-end">
        <a href="/admin/materials" class="btn btn-outline-secondary btn-lg">
          <i class="bi bi-x-circle"></i> Batal
        </a>
        <button type="submit" class="btn btn-primary btn-lg px-5">
          <i class="bi bi-check-circle"></i> Simpan Video
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  // Toggle between URL and File upload
  document.querySelectorAll('input[name="upload_method"]').forEach((radio) => {
    radio.addEventListener('change', function () {
      const urlInput = document.getElementById('url_input');
      const fileInput = document.getElementById('file_input');
      const mediaUrlField = document.getElementById('media_url');
      const videoDurationField = document.getElementById('video_duration');

      if (this.value === 'url') {
        urlInput.classList.remove('d-none');
        fileInput.classList.add('d-none');
        mediaUrlField.required = true;
        videoDurationField.required = false;
        // Clear file inputs
        document.getElementById('video_file').value = '';
        document.getElementById('thumbnail_file').value = '';
        clearVideoFile();
      } else {
        urlInput.classList.add('d-none');
        fileInput.classList.remove('d-none');
        mediaUrlField.required = false;
        videoDurationField.required = true;
        // Clear URL input
        mediaUrlField.value = '';
      }
    });
  });

  // Video file handler
  const videoFileInput = document.getElementById('video_file');
  const uploadPlaceholder = document.querySelector('.upload-placeholder');
  const uploadInfo = document.getElementById('uploadInfo');

  videoFileInput.addEventListener('change', function () {
    const file = this.files[0];
    if (file) {
      const fileSize = file.size / (1024 * 1024); // Convert to MB
      if (fileSize > 200) {
        alert('❌ Ukuran file terlalu besar!\n\nMaksimal: 200MB\nFile Anda: ' + fileSize.toFixed(2) + 'MB\n\nSilakan kompres video terlebih dahulu.');
        this.value = '';
        return;
      }

      // Show file info
      document.getElementById('fileName').textContent = file.name;
      document.getElementById('fileSize').textContent = fileSize.toFixed(2) + ' MB';
      uploadPlaceholder.classList.add('d-none');
      uploadInfo.classList.remove('d-none');
    }
  });

  function clearVideoFile() {
    document.getElementById('video_file').value = '';
    uploadPlaceholder.classList.remove('d-none');
    uploadInfo.classList.add('d-none');
  }

  // Duration helper
  const durationInput = document.getElementById('video_duration');
  const durationHelper = document.getElementById('durationHelper');

  durationInput.addEventListener('input', function () {
    const seconds = parseInt(this.value) || 0;
    const minutes = Math.floor(seconds / 60);
    const secs = seconds % 60;

    if (seconds > 0) {
      durationHelper.textContent = `= ${minutes} menit ${secs} detik`;
    } else {
      durationHelper.textContent = '';
    }
  });

  // Drag and drop
  const uploadArea = document.getElementById('uploadArea');

  uploadArea.addEventListener('dragover', (e) => {
    e.preventDefault();
    uploadArea.classList.add('drag-over');
  });

  uploadArea.addEventListener('dragleave', () => {
    uploadArea.classList.remove('drag-over');
  });

  uploadArea.addEventListener('drop', (e) => {
    e.preventDefault();
    uploadArea.classList.remove('drag-over');

    const files = e.dataTransfer.files;
    if (files.length > 0) {
      videoFileInput.files = files;
      videoFileInput.dispatchEvent(new Event('change'));
    }
  });

  // Form validation
  document.getElementById('addVideoForm').addEventListener('submit', function (e) {
    const uploadMethod = document.querySelector('input[name="upload_method"]:checked').value;

    if (uploadMethod === 'url') {
      const url = document.getElementById('media_url').value.trim();
      if (!url) {
        e.preventDefault();
        alert('❌ URL Video harus diisi!');
        return;
      }
    } else {
      const videoFile = document.getElementById('video_file').files[0];
      const duration = document.getElementById('video_duration').value;

      if (!videoFile) {
        e.preventDefault();
        alert('❌ File video harus dipilih!');
        return;
      }

      if (!duration || duration < 1) {
        e.preventDefault();
        alert('❌ Durasi video harus diisi dengan angka minimal 1 detik!');
        return;
      }
    }
  });
</script>

