<!-- Header Unit -->
<div class="unit-header mb-4">
  <h2 class="mb-2 fw-bold">Unit: <%= unit.title %>
  </h2>
  <p class="text-muted mb-0">Modul: <%= unit.module_title %>
  </p>
</div>

<!-- Navigation -->
<div class="mb-4 d-flex gap-2 flex-wrap">
  <a href="/student/modules/<%= unit.module_id %>" class="btn btn-sm btn-outline-secondary">
    <i class="bi bi-arrow-left"></i> Kembali ke Modul
  </a>
  <a href="/student/units/<%= unit.id %>/activities" class="btn btn-sm btn-primary">
    <i class="bi bi-clipboard-check"></i> Lihat Aktivitas/Ujian
  </a>
</div>

<!-- Materi Section -->
<div class="materi-section">
  <h5 class="mb-4">
    <i class="bi bi-play-circle-fill text-primary"></i>
    Video Pembelajaran
  </h5>

  <% if (materials && materials.length) { %>
    <div class="materials-grid">
      <% materials.forEach(function(mat, index) { %>
        <div class="material-card card border-0 shadow-sm" data-index="<%= index %>">
          <div class="card-body">
            <!-- Material Title -->
            <h6 class="material-title mb-3">
              <i class="bi bi-film text-primary me-2"></i>
              <%= mat.title %>
            </h6>

            <!-- Video Container -->
            <% if (mat.media_url) { %>
              <div class="video-wrapper mb-3">
                <% if (mat.media_url.includes('youtube.com') || mat.media_url.includes('youtu.be')) { %>
                  <!-- YouTube Video with Lazy Loading -->
                  <div class="video-container" id="video-<%= mat.id %>">
                    <% if (mat.video_thumbnail) { %>
                      <div class="video-thumbnail" style="background-image: url('<%= mat.video_thumbnail %>')"
                        data-video-url="<%= mat.media_url %>" onclick="loadVideo(this, <%= mat.id %>)">
                        <div class="play-button">
                          <i class="bi bi-play-circle-fill"></i>
                        </div>
                      </div>
                      <% } else { %>
                        <iframe src="<%= mat.media_url %>?rel=0&modestbranding=1" frameborder="0"
                          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                          allowfullscreen loading="lazy">
                        </iframe>
                        <% } %>
                  </div>
                  <% } else if (mat.media_url.includes('vimeo.com')) { %>
                    <!-- Vimeo Video -->
                    <div class="video-container">
                      <iframe src="<%= mat.media_url %>" frameborder="0"
                        allow="autoplay; fullscreen; picture-in-picture" allowfullscreen loading="lazy">
                      </iframe>
                    </div>
                    <% } else if (mat.media_url.startsWith('/uploads/')) { %>
                      <!-- Local Upload Video with Lazy Loading -->
                      <div class="video-container">
                        <video controls preload="metadata" controlsList="nodownload" <% if (mat.video_thumbnail) {
                          %>poster="<%= mat.video_thumbnail %>"<% } %>>
                              <source src="<%= mat.media_url %>#t=0.1" type="video/mp4">
                              <source src="<%= mat.media_url %>#t=0.1" type="video/webm">
                              Browser Anda tidak mendukung video HTML5.
                        </video>
                      </div>
                      <% } else { %>
                        <!-- Other Video URLs -->
                        <div class="video-link-container">
                          <a href="<%= mat.media_url %>" target="_blank" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-play-fill"></i> Tonton Video
                          </a>
                        </div>
                        <% } %>
              </div>

              <!-- Video Info -->
              <div class="video-info mb-3">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                  <% if (mat.video_duration) { %>
                    <span class="badge bg-primary">
                      <i class="bi bi-clock"></i>
                      <%= Math.floor(mat.video_duration / 60) %>:<%= String(mat.video_duration % 60).padStart(2, '0' )
                          %> menit
                    </span>
                    <% } %>
                      <% if (mat.video_file_size) { %>
                        <span class="badge bg-info">
                          <i class="bi bi-file-earmark"></i>
                          <%= (mat.video_file_size / (1024 * 1024)).toFixed(1) %> MB
                        </span>
                        <% } %>
                          <span class="badge bg-secondary">
                            <i class="bi bi-tag"></i>
                            <%= mat.media_type || 'VIDEO' %>
                          </span>
                </div>
              </div>
              <% } %>

                <!-- Content/Description -->
                <% if (mat.content) { %>
                  <div class="material-content">
                    <button class="btn btn-sm btn-outline-primary mb-2" type="button" data-bs-toggle="collapse"
                      data-bs-target="#content-<%= mat.id %>">
                      <i class="bi bi-info-circle"></i> Lihat Deskripsi
                    </button>
                    <div class="collapse" id="content-<%= mat.id %>">
                      <div class="card card-body bg-light">
                        <div class="content-text" style="white-space: pre-line; line-height: 1.6;">
                          <%= mat.content %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% } %>

                    <!-- Mark as Complete (Optional Feature) -->
                    <div class="mt-3">
                      <button class="btn btn-success btn-sm w-100" onclick="markAsWatched(<%= mat.id %>)">
                        <i class="bi bi-check-circle"></i> Tandai Sudah Ditonton
                      </button>
                    </div>
          </div>
        </div>
        <% }) %>
    </div>
    <% } else { %>
      <div class="alert alert-secondary d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle-fill me-3 fs-4"></i>
        <div>
          <h6 class="alert-heading mb-1">Belum Ada Materi</h6>
          <p class="mb-0">Belum ada video pembelajaran untuk unit ini. Silakan cek kembali nanti.</p>
        </div>
      </div>
      <% } %>
</div>

<script>
  // Lazy load YouTube video on click (untuk thumbnail)
  function loadVideo(thumbnail, videoId) {
    const container = document.getElementById('video-' + videoId);
    const videoUrl = thumbnail.getAttribute('data-video-url');

    const iframe = document.createElement('iframe');
    iframe.src = videoUrl + '?autoplay=1&rel=0&modestbranding=1';
    iframe.frameBorder = '0';
    iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
    iframe.allowFullscreen = true;
    iframe.loading = 'eager'; // Load immediately when clicked

    container.innerHTML = '';
    container.appendChild(iframe);
  }

  // Mark as watched (simpan ke local storage atau kirim ke server)
  function markAsWatched(materialId) {
    // Save to localStorage
    let watchedVideos = JSON.parse(localStorage.getItem('watchedVideos') || '[]');
    if (!watchedVideos.includes(materialId)) {
      watchedVideos.push(materialId);
      localStorage.setItem('watchedVideos', JSON.stringify(watchedVideos));
    }

    // Show feedback
    const button = event.target.closest('button');
    button.innerHTML = '<i class="bi bi-check-circle-fill"></i> Sudah Ditonton';
    button.classList.remove('btn-success');
    button.classList.add('btn-secondary');
    button.disabled = true;

    // Optional: Send to server for progress tracking
    // fetch('/student/progress/material/' + materialId, { method: 'POST' })

    // Show toast notification
    showToast('Video ditandai sebagai sudah ditonton!');
  }

  // Check watched videos on load
  document.addEventListener('DOMContentLoaded', function () {
    const watchedVideos = JSON.parse(localStorage.getItem('watchedVideos') || '[]');
    watchedVideos.forEach(id => {
      const button = document.querySelector(`button[onclick="markAsWatched(${id})"]`);
      if (button) {
        button.innerHTML = '<i class="bi bi-check-circle-fill"></i> Sudah Ditonton';
        button.classList.remove('btn-success');
        button.classList.add('btn-secondary');
        button.disabled = true;
      }
    });
  });

  // Toast notification
  function showToast(message) {
    const toast = document.createElement('div');
    toast.className = 'toast-notification';
    toast.innerHTML = `<i class="bi bi-check-circle-fill me-2"></i>${message}`;
    document.body.appendChild(toast);

    setTimeout(() => {
      toast.classList.add('show');
    }, 100);

    setTimeout(() => {
      toast.classList.remove('show');
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }

  // Lazy load images for better performance
  if ('loading' in HTMLImageElement.prototype) {
    const images = document.querySelectorAll('img[loading="lazy"]');
    images.forEach(img => {
      img.src = img.dataset.src;
    });
  } else {
    // Fallback for browsers that don't support lazy loading
    const script = document.createElement('script');
    script.src = 'https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.3.2/lazysizes.min.js';
    document.body.appendChild(script);
  }
</script>

<style>
  .unit-header {
    padding-bottom: 1rem;
    border-bottom: 2px solid #e2e8f0;
  }

  .materials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .materials-grid {
      grid-template-columns: 1fr;
    }
  }

  .material-card {
    border-radius: 16px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
  }

  .material-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
  }

  .material-title {
    color: #1e293b;
    font-weight: 600;
    font-size: 1.1rem;
  }

  .video-wrapper {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
  }

  .video-container {
    position: relative;
    padding-bottom: 56.25%;
    /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    border-radius: 12px;
    background: #f1f5f9;
  }

  .video-container iframe,
  .video-container video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 12px;
  }

  .video-thumbnail {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .video-thumbnail:hover {
    transform: scale(1.05);
  }

  .video-thumbnail::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
  }

  .video-thumbnail:hover::before {
    background: rgba(0, 0, 0, 0.5);
  }

  .play-button {
    position: relative;
    z-index: 2;
    font-size: 5rem;
    color: white;
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
  }

  .video-thumbnail:hover .play-button {
    transform: scale(1.2);
  }

  .video-info {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .badge {
    font-size: 0.85rem;
    padding: 0.4em 0.8em;
    font-weight: 500;
  }

  .material-content .card-body {
    border-radius: 8px;
    border-left: 4px solid #3b82f6;
  }

  .content-text {
    font-size: 0.95rem;
    color: #475569;
  }

  .btn-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    border: none;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
  }

  .btn-success {
    transition: all 0.3s ease;
  }

  .btn-success:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(34, 197, 94, 0.4);
  }

  .toast-notification {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.3s ease;
    z-index: 9999;
    font-weight: 500;
  }

  .toast-notification.show {
    opacity: 1;
    transform: translateY(0);
  }

  .alert {
    border-radius: 12px;
    border: none;
  }

  .alert-secondary {
    background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
    border-left: 4px solid #64748b;
  }

  /* Loading Animation */
  @keyframes pulse {

    0%,
    100% {
      opacity: 1;
    }

    50% {
      opacity: 0.5;
    }
  }

  .loading {
    animation: pulse 1.5s ease-in-out infinite;
  }

  /* Optimize for slow connections */
  @media (prefers-reduced-data: reduce) {

    .video-container iframe,
    .video-container video {
      background: #f1f5f9;
    }
  }
</style>